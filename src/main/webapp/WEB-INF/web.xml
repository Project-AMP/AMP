<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- The definition of the Root Spring Container shared by all Servlets 
		and Filters -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:ServletAndContext/context/context-*.xml</param-value>
	</context-param>

	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Processes application requests -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:ServletAndContext/servlet/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- 썸머노트 한글 깨짐 방지 설정 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
<!-- 에러페이지 -->
	<error-page>
          <error-code>400</error-code>
          <location>/WEB-INF/views/site/main/errorPage.jsp</location>
 	</error-page>
	<error-page>
          <error-code>404</error-code>
          <location>/WEB-INF/views/site/main/errorPage.jsp</location>
 	</error-page> 
 	<error-page>
          <error-code>405</error-code>
           <location>/WEB-INF/views/site/main/errorPage.jsp</location>
 	</error-page>
 	<error-page>
          <error-code>500</error-code>
          <location>/WEB-INF/views/site/main/errorPage.jsp</location>
 	</error-page>
 	<error-page>
          <error-code>503</error-code>
           <location>/WEB-INF/views/site/main/errorPage.jsp</location>
 	</error-page>
</web-app>
